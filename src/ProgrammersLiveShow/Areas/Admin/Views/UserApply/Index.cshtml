@{
    Layout = null;
}
<div class="panel-body" style="padding:0">
    <div class="panel panel-default">
        <div class="panel-heading"></div>
        <div class="panel-body">
            <form id="formSearch" class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-1" for="user_email_search">申请人邮箱：</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" id="user_email_search">
                    </div>
                    <label class="control-label col-sm-1" for="istrue_status_search">是否同意：</label>
                    <div class="col-sm-2">
                        <select class="form-control" id="istrue_status_search">
                            <option value="-1">全部</option>
                            <option value="1">同意</option>
                            <option value="0">不同意</option>
                        </select>
                    </div>
                    <div class="col-sm-2">
                        <button type="button" id="btnQueryList" class="btn btn-primary"><i class="icon-search"></i>查询</button>
                        <button type="button" id="btnReset" class="btn btn-primary"><i class="icon-remove"></i>清空</button>
                    </div>
                </div>
            </form>
            <hr />
            <div>
                <table id="userapplyinfo"></table>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("ButtionInfo")

@* 通过/不通过模型 *@
<div class="modal fade" id="ApplyEditModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times;</button>
                <h4 class="modal-title"><span id="disableName">***</span>：数据同意/不同意管理</h4>
            </div>
            <div class="modal-body">
                <form id="applyOperation" method="post" class="form-horizontal">
                    <p>友情提示：同意/不同意状态都会有数据记录</p>
                    <input type="hidden" id="id" name="id" />
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">描述:</span>
                            <textarea rows="3" id="apply_desc" name="apply_desc" placeholder="请输入描述" maxlength="200" class="form-control"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="icon-reply"></i>取消</button>
                <button type="button" class="btn btn-primary" id="btnApply"><i class="icon-ok"></i>确定</button>
            </div>
        </div>
    </div>
</div>

@*详情浮层*@
<div class="modal fade" id="DetailModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times;</button>
                <h4 class="modal-title">申请信息详情</h4>
            </div>
            <div class="modal-body">
                <form id="applyDetail" class="form-horizontal">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">申请人:</span>
                            <input type="text" id="detail_user_id" readonly="readonly" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">申请理由:</span>
                            <input type="text" id="detail_apply_reason" readonly="readonly" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">是否同意:</span>
                            <textarea rows="3" id="detail_is_true" readonly="readonly" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"> 同意/拒绝理由:</span>
                            <textarea rows="3" id="detail_apply_desc" readonly="readonly" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"> 处理人名称:</span>
                            <textarea rows="3" id="detail_detail_id" readonly="readonly" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">创建时间:</span>
                            <input type="text" id="detail_createtime" readonly="readonly" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/admin/js/help/userapply.js" asp-append-version="true"></script>
<script type="text/javascript">
    $(function () {
        pls.admin.userapply.init();
    })
</script>