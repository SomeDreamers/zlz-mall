<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<html lang="en" class="no-js">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>@ViewBag.AdminTitle</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="@ViewBag.AdminKeyWords" />
    <meta name="description" content="@ViewBag.AdminDescription" />
    <meta name="author" content="@ViewBag.AdminAuthor" />
    
    <environment names="Development">
        @*引用外部JS*@
        <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/js/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="http://cdn.bootcss.com/font-awesome/3.2.1/css/font-awesome.min.css"
              asp-fallback-href="~/js/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap-table/1.11.0/bootstrap-table.min.css"
              asp-fallback-href="~/js/bootstrap-table/dist/bootstrap-table.min.css" />
        <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap-select/1.11.2/css/bootstrap-select.min.css"
              asp-fallback-href="~/js/bootstrap-select/dist/css/bootstrap-select.min.css" />
        <link rel="stylesheet" href="http://cdn.bootcss.com/zTree.v3/3.5.24/css/zTreeStyle/zTreeStyle.min.css"
              asp-fallback-href="~/js/ztree/css/zTreeStyle/zTreeStyle.css" />
        <link rel="stylesheet" href="http://cdn.bootcss.com/wangeditor/2.1.20/css/wangEditor.min.css"
              asp-fallback-href="~/js/wangeditor/dist/css/wangEditor.min.css" />
        <link rel="stylesheet" href="~/js/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css"
              asp-fallback-href="~/js/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" />
        <!-- 系统框架CSS -->
        <link href="~/admin/css/layout.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/admin/css/themes/grey.css" rel="stylesheet" id="style_color" />
    </environment>
    <environment names="Staging,Production">
        @*引用外部JS*@
        <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/js/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="http://cdn.bootcss.com/font-awesome/3.2.1/css/font-awesome.min.css"
              asp-fallback-href="~/js/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap-table/1.11.0/bootstrap-table.min.css"
              asp-fallback-href="~/js/bootstrap-table/dist/bootstrap-table.min.css" />
        <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap-select/1.11.2/css/bootstrap-select.min.css"
              asp-fallback-href="~/js/bootstrap-select/dist/css/bootstrap-select.min.css" />
        <link rel="stylesheet" href="http://cdn.bootcss.com/zTree.v3/3.5.24/css/zTreeStyle/zTreeStyle.min.css"
              asp-fallback-href="~/js/ztree/css/zTreeStyle/zTreeStyle.css" />
        <link rel="stylesheet" href="http://cdn.bootcss.com/wangeditor/2.1.20/css/wangEditor.min.css"
              asp-fallback-href="~/js/wangeditor/dist/css/wangEditor.min.css" />
        <link rel="stylesheet" href="~/js/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css"
              asp-fallback-href="~/js/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" />
        <!-- 系统框架CSS -->
        <link href="~/admin/css/layout.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/admin/css/themes/grey.css" rel="stylesheet" id="style_color" />
    </environment>
</head>

<body class="page-md page-header-fixed page-quick-sidebar-over-content page-sidebar-closed-hide-logo ">
    <!-- 顶部内容 -->
    <div class="page-header md-shadow-z-1-i navbar navbar-fixed-top">
        @await Html.PartialAsync("_Head")
    </div>
    <div class="clearfix"></div>

    <!-- 中间页面 -->
    <div class="page-container">
        <!-- 左边菜单 -->
        <div class="page-sidebar-wrapper">
            @await Component.InvokeAsync("MenuInfo")
        </div>
        <!-- 主题设置页面信息 -->
        <div class="page-content-wrapper">
            <div class="page-content">
                <div class="theme-panel hidden-xs hidden-sm">
                    <div class="toggler"></div><div class="toggler-close"></div>
                    <div class="theme-options">
                        @await Html.PartialAsync("_Theme")
                    </div>
                </div>
                <div id="content_page">
                     @RenderBody()
                </div>
            </div>
        </div>

        <!-- 聊天其它配置，从数据库中读取 -->
        <a href="javascript:;" class="page-quick-sidebar-toggler"><i class="icon-close"></i></a>
        <div class="page-quick-sidebar-wrapper">
            <div class="page-quick-sidebar">
                @await Html.PartialAsync("_Wechat")
            </div>
        </div>
    </div>
    
    <!-- 底部版权,下拉滚动 -->
    <div class="page-footer">
        <div class="page-footer-inner">
            @DateTime.Now.ToString("yyyy")  &copy; by @ViewBag.Copyright
        </div>
        <div class="scroll-to-top">
            <i class="icon-arrow-up"></i>
        </div>
    </div>

    @*错误弹层提示信息*@
    <div id="error-message"></div>

    <environment names="Development">
        @*系统外部JS*@
        <script src="http://cdn.bootcss.com/jquery/2.2.4/jquery.min.js"
                asp-fallback-src="~/js/jquery/dist/jquery.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"
                asp-fallback-src="~/js/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="http://cdn.bootcss.com/jQuery-slimScroll/1.3.8/jquery.slimscroll.min.js"
                asp-fallback-src="~/js/jquery.slimscroll/jquery.slimscroll.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap-table/1.11.0/bootstrap-table.min.js"
                asp-fallback-src="~/js/bootstrap-table/dist/bootstrap-table.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap-table/1.11.0/locale/bootstrap-table-zh-CN.min.js"
                asp-fallback-src="~/js/bootstrap-table/dist/locale/bootstrap-table-zh-CN.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap-select/1.11.2/js/bootstrap-select.min.js"
                asp-fallback-src="~/js/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
        <script src="http://cdn.bootcss.com/zTree.v3/3.5.24/js/jquery.ztree.all.min.js"
                asp-fallback-src="~/js/ztree/js/jquery.ztree.all.min.js"></script>
        <script src="http://cdn.bootcss.com/wangeditor/2.1.20/js/wangEditor.min.js"
                asp-fallback-src="~/js/wangeditor/dist/js/wangEditor.min.js"></script>
        <script src="~/js/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"
                asp-fallback-src="~/js/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
        <script src="~/js/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"
                asp-fallback-src="~/js/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>
        <script src="~/js/jquery.md5.js"></script>
        <!-- 系统内部母版页JS -->
        <script src="~/admin/js/metronic.js" asp-append-version="true"></script>
        <script src="~/admin/js/layout.js" asp-append-version="true"></script>
        @*公共方法JS*@
        <script src="~/js/plscommon.js"  asp-append-version="true"></script>
        @RenderSection("scripts", required: false)
    </environment>
    <environment names="Staging,Production">
        @*系统外部JS*@
        <script src="http://cdn.bootcss.com/jquery/2.2.4/jquery.min.js"
                asp-fallback-src="~/js/jquery/dist/jquery.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"
                asp-fallback-src="~/js/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="http://cdn.bootcss.com/jQuery-slimScroll/1.3.8/jquery.slimscroll.min.js"
                asp-fallback-src="~/js/jquery.slimscroll/jquery.slimscroll.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap-table/1.11.0/bootstrap-table.min.js"
                asp-fallback-src="~/js/bootstrap-table/dist/bootstrap-table.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap-table/1.11.0/locale/bootstrap-table-zh-CN.min.js"
                asp-fallback-src="~/js/bootstrap-table/dist/locale/bootstrap-table-zh-CN.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap-select/1.11.2/js/bootstrap-select.min.js"
                asp-fallback-src="~/js/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
        <script src="http://cdn.bootcss.com/zTree.v3/3.5.24/js/jquery.ztree.all.min.js"
                asp-fallback-src="~/js/ztree/js/jquery.ztree.all.min.js"></script>
        <script src="http://cdn.bootcss.com/wangeditor/2.1.20/js/wangEditor.min.js"
                asp-fallback-src="~/js/wangeditor/dist/js/wangEditor.min.js"></script>
        <script src="~/js/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"
                asp-fallback-src="~/js/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
        <script src="~/js/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"
                asp-fallback-src="~/js/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>

        <script src="~/js/jquery.md5.js"></script>
        <!-- 系统内部母版页JS -->
        <script src="~/admin/js/metronic.js" asp-append-version="true"></script>
        <script src="~/admin/js/layout.js" asp-append-version="true"></script>
        @*公共方法JS*@
        <script src="~/js/plscommon.js" asp-append-version="true"></script>
        @RenderSection("scripts", required: false)
    </environment>
    <script>
        jQuery(document).ready(function () {
            Metronic.init();
            Layout.init();
        });
    </script>
</body>
</html>