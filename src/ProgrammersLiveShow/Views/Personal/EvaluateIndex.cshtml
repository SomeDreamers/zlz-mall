@model Pls.Entity.OrderPay
@{
        ViewBag.Title = "个人中心-晒单评价";
}
@section css
{
    <link href="~/front/css/star.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/front/css/personalcenter.css" rel="stylesheet" asp-append-version="true" />
}

<div class="orderevaluate">
    <div class="maincontent col-xs-12 col-sm-12 col-md-12 col-lg-10">
        <h3>评价晒单<i class="glyphicon glyphicon-pencil"></i></h3>
        <div>订单号:@Model.order_number<b>&nbsp;&nbsp;购买时间:@Model.createtime.ToString("yyyy-MM-dd HH:mm:ss")</b></div>
    </div>

    <div class="maincontent col-xs-12 col-sm-12 col-md-12 col-lg-10">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4">
            <div class="leftorderinfo">
                <div>
                    <img src="@Model.shop_defaultimg" class="img img-responsive">
                    <div style="text-align:center;">@Model.shop_name</div>
                    <span>版本:@Model.shop_code</span><h4>¥@Model.order_total</h4>
                </div>
            </div>
        </div>

        <div class="righteval col-xs-12 col-sm-12 col-md-12 col-lg-8">
            <div class="rightevaluate">
                <div class="require"><i class="glyphicon glyphicon-warning-sign"></i>请填写您对该商品的评价信息</div>
                <div class="evaitem">商品满意度</div>
                <span>
                    <input id="input-2ba" type="number" class="rating" min="0" max="5" step="1.0" data-stars=5
                           data-symbol="&#xe005;" data-default-caption="{rating} hearts" data-star-captions="{}">
                </span>
                <div class="clr"></div>
                <div class="evaitem">评价晒单</div>
                <textarea placeholder="商品是否给力？快分享你的购买心得吧，只能输入1-100字~" id="comment_content" maxlength="100"></textarea>
                <div class="clr"></div>
                <div>
                    <ul class="uploadpic">
                        <li>
                            <a href="javascript:;" class="file" >
                                 <input type="file" id="uploadImage" name="uploadImage" class="btnupload" />
                            </a>
                        </li>
                    </ul>
                    <div style="text-align:left;">第<em class="current">0</em>张图片上传成功,最多上传4张图片</div>
                </div>
                <div class="clr"></div>
                <p id="image_error" style="float:left;display:none" class="showerror"></p>
                <div class="clr"></div>
                <div class="submitevalu">
                    <button class="btn" id="btnAddEvaluate">提交评价</button>
                </div>
            </div>
            <div class="clr"></div>
        </div>
    </div>
    <div class="clr"></div>
</div>

@section scripts
{
    <script src="~/front/js/sys/star.js"  asp-append-version="true"></script>
    <script src="~/front/js/evaluate.js" asp-append-version="true"></script>
    <script type="text/javascript">
            $(function () {
                pls.front.evaluate.init({
                    orderdetail_id: "@Model.orderdetail_id",
                    shop_id: "@Model.shop_id",
                    shopsku_id:"@Model.shopsku_id"
                });
            })
    </script>
}